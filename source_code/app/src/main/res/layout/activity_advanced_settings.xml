<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_centerVertical="true"
    tools:context="com.gaurav.android.rplace.AdvancedSettings"
    android:background="@drawable/background"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:id="@+id/AdvancedSettingsRelativeLayout">

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="@string/createDatabase"
        android:id="@+id/CreateDatabaseButtonID"
        android:onClick="goto_createDatabase"

        android:background="@drawable/view_buttons_background"
        android:layout_alignTop="@+id/DeleteDatabaseButtonID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="@string/DeleteDatabaseString"
        android:id="@+id/DeleteDatabaseButtonID"
        android:onClick="goto_deleteDatabase"

        android:background="@drawable/view_buttons_background"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/button2"
        android:layout_marginRight="15dp"
        android:layout_alignEnd="@+id/button2"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="@string/LoadTestData"
        android:id="@+id/LoadTestDataButtonID"
        android:onClick="goto_loadData"
        android:background="@drawable/view_buttons_background"
        android:layout_alignTop="@+id/DeleteDatabaseButtonID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="@string/AboutApp"
        android:id="@+id/button2"
        android:layout_marginBottom="30dp"
        android:background="@drawable/about_app_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="goto_about_app"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>
</RelativeLayout>
