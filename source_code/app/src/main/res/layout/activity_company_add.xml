<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gaurav.android.rplace.company_add">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/CompanyNameTextView"
        android:layout_marginTop="86dp"
        android:text="@string/CompanyName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/AddCompanyEditText"
        android:layout_alignBottom="@+id/CompanyNameTextView"
        android:layout_toRightOf="@+id/CompanyNameTextView"
        android:layout_toEndOf="@+id/CompanyNameTextView"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Add"
        android:id="@+id/AddCompanyButton"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/CompanyNameTextView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
