<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gaurav.android.rplace.RemoveGateway"
    android:id="@+id/RemoveGatewayUI">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_remove_student"
        android:id="@+id/removeStudentButtonId"
        android:layout_alignTop="@+id/RemoveCompanyButtonId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:onClick="goto_remove_student"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RemoveCompany"
        android:id="@+id/RemoveCompanyButtonId"
        android:layout_alignTop="@+id/RemovePreviousID"
        android:layout_centerHorizontal="true"
        android:onClick="goto_remove_company"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RemovePreviousData"
        android:id="@+id/RemovePreviousID"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="goto_remove_previous_data"/>
</RelativeLayout>
