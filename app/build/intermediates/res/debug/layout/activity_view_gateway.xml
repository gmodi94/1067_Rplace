<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gaurav.android.rplace.ViewGateway"
    android:id="@+id/ViewRelativelayout"
    android:background="@drawable/view_background">

    <Button
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:text="@string/ViewData"
        android:id="@+id/ViewDataButtonID"

        android:background="@drawable/view_activity_buttons"
        android:textSize="30sp"

        android:textColor="@android:color/black"
        android:onClick="goto_view_data"
        android:layout_marginLeft="39dp"
        android:layout_alignTop="@+id/ViewGraphID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:text="@string/ViewStatistics"
        android:id="@+id/ViewGraphID"
        android:onClick="goto_View_Staistics"
        android:background="@drawable/view_activity_buttons"
        android:textSize="30sp"


        android:textColor="@android:color/black"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

</RelativeLayout>
