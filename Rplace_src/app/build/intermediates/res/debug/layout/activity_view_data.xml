<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gaurav.android.rplace.ViewData"
    android:id="@+id/ViewDataRelativeLayout"
    android:background="@drawable/background_remove">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/student_pid_TextViewString"
        android:id="@+id/PidTextViewID"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="61dp"
         android:textColor="@color/white"
        android:textSize="40sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PidETextBoxID"
        android:layout_alignBottom="@+id/PidTextViewID"
        android:layout_toRightOf="@+id/PidTextViewID"
        android:layout_toEndOf="@+id/PidTextViewID"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:ems="5"
        android:inputType="number"
        android:textColor="@color/white"
        android:singleLine="false"
        android:selectAllOnFocus="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/DisplayBoardEtID"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:enabled="false" />

    <Button
        android:layout_width="125sp"
        android:layout_height="70sp"
        android:text="@string/SubmitButton"
        android:id="@+id/GetStudentInfoButtonID"
        android:onClick="GetStudentInfo"
        android:background="@drawable/remove_activity_buttons"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/PidETextBoxID"
        android:layout_toRightOf="@+id/PidETextBoxID"
        android:layout_toEndOf="@+id/PidETextBoxID"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp"
        />
</RelativeLayout>
